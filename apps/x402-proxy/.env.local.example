# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/x402proxy?sslmode=require

# better-auth
BETTER_AUTH_SECRET=your-32-char-secret-here-min-32-chars
BETTER_AUTH_URL=http://localhost:3001

# OAuth - Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Set to "true" to enable Google OAuth button in UI
NEXT_PUBLIC_GOOGLE_OAUTH_ALLOWED=

# OAuth - GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
# Set to "true" to enable GitHub OAuth button in UI
NEXT_PUBLIC_GITHUB_OAUTH_ALLOWED=

# Encryption key for secrets (32 bytes hex = 64 chars)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# x402 Facilitator (CDP)
FACILITATOR_URL=https://x402-facilitator.cdp.coinbase.com
FACILITATOR_API_KEY=your-cdp-api-key

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Optional: WalletConnect Project ID for paywall
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Development: Force testnet mode (Base Sepolia) for all endpoints
# Set to "true" to force testnet mode in development
NEXT_PUBLIC_FORCE_TESTNET=

# Development: Allow localhost/IP addresses as endpoint target URLs
# Set to "true" to allow localhost, 127.0.0.1, or other IP addresses
NEXT_PUBLIC_ALLOW_LOCALHOST_ENDPOINT=

# Development: Allow non-HTTPS schemes for endpoint target URLs
# Set to "true" to allow http:// or other schemes
NEXT_PUBLIC_ALLOW_OTHER_ENDPOINT_SCHEMES=

# Custom HTML documentation URL (shown in endpoint settings)
# Link to documentation explaining how to create custom paywall HTML templates
NEXT_PUBLIC_CUSTOM_HTML_HELPER_URL=

# Authentication: Require email verification before login
# Set to "false" to skip email verification (useful for development)
REQUIRE_EMAIL_VERIFICATION=true
